<!doctype html>
<html lang="en">
<head>
  

  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

  <title>Spine Tabs Example</title>

  <link rel="stylesheet" href="/css/style.css">

</head>
<body>

  <div id="container">
      
      <nav class="tabs">
          <a href="/tab1">Tab 1</a>
          <a href="/tab2">Tab 2</a>
          <a href="/tab3">Tab 3</a>
      </nav>

      <article>
          <section data-tab="tab1" >
              -- Tab 1 Content --
          </section>
          <section data-tab="tab2" class="hidden" >
              -- Tab 2 Content --
          </section>
          <section data-tab="tab3" class="hidden" >
              -- Tab 3 Content --
          </section>
      </article>

  </div>


  <!-- Javascript  -->
  <script src="/js/jquery.js"></script>
  <script src="/js/spine.js"></script>
  <script src="/js/spine.route.js"></script>
  <script src="/js/spine.tabs.js"></script>
  <script>

      // initalize tabs controller
      new Spine.Controller.Tabs({ el: $("#container") });

      // start routing
      Spine.Route.setup({ history: true });
      
   
  </script>
</body>
</html>